<!-- MansLabojums/AppShell.xaml -->
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:MansLabojums.Views"
       x:Class="MansLabojums.AppShell">

    <!-- Shell navigācija uz lapām -->
    <ShellContent Title="Sākumlapa"
                  ContentTemplate="{DataTemplate views:MainPage}"
                  Route="MainPage"/>
    <ShellContent Title="Studenti"
                  ContentTemplate="{DataTemplate views:StudentsPage}"
                  Route="StudentsPage"/>
    <ShellContent Title="Uzdevumi"
                  ContentTemplate="{DataTemplate views:AssignmentsPage}"
                  Route="AssignmentsPage"/>
    <ShellContent Title="Iesniegumi"
                  ContentTemplate="{DataTemplate views:SubmissionsPage}"
                  Route="SubmissionsPage"/>
    <ShellContent Title="Kursi"
                  ContentTemplate="{DataTemplate views:CoursesPage}"
                  Route="CoursesPage"/>
    <ShellContent Title="Pasniedzēji"
                  ContentTemplate="{DataTemplate views:TeachersPage}"
                  Route="TeachersPage"/>

</Shell>
