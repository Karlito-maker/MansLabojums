<!-- MansLabojums/Views/AssignmentsPage.xaml -->
<!-- Uzdevumu (Assignment) CRUD lapa -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MansLabojums.Views.AssignmentsPage"
             Title="Uzdevumi">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">

            <Label Text="Uzdevumu saraksts"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- Saraksts ar esošajiem uzdevumiem -->
            <ListView x:Name="AssignmentsListView"
                      SelectionMode="Single"
                      HeightRequest="200"
                      ItemSelected="OnAssignmentSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding TitleText}"
                                  Detail="{Binding DetailText}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Pogas Labot/Dzēst -->
            <HorizontalStackLayout Spacing="10">
                <Button x:Name="EditButton"
                        Text="Labot"
                        Clicked="OnEditAssignmentClicked"
                        IsEnabled="False"/>
                <Button x:Name="DeleteButton"
                        Text="Dzēst"
                        Clicked="OnDeleteAssignmentClicked"
                        IsEnabled="False"/>
            </HorizontalStackLayout>

            <!-- Forma jauna uzdevuma (Assignment) pievienošanai -->
            <Frame BackgroundColor="#eeeeee" Padding="10">
                <VerticalStackLayout Spacing="6">
                    <Label Text="Pievienot uzdevumu"
                           FontAttributes="Bold"
                           HorizontalOptions="Center" />

                    <Entry x:Name="DescriptionEntry"
                           Placeholder="Apraksts (piem. Algebras mājasdarbs)" />
                    <Entry x:Name="DeadlineEntry"
                           Placeholder="Termiņš (YYYY-MM-DD)" />

                    <!-- Šeit varat ielikt CoursePicker, ja vēlaties dropdown kursiem,
                         šobrīd šim piemēram atstājam int CourseId ievadi -->
                    <Entry x:Name="CourseIdEntry"
                           Placeholder="Kursa ID (skaitlis)"
                           Keyboard="Numeric" />

                    <HorizontalStackLayout Spacing="10">
                        <Button Text="Pievienot"
                                Clicked="OnAddAssignmentClicked"/>
                        <Button Text="Cancel"
                                Clicked="OnCancelAddClicked"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
