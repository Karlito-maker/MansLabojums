<!-- MansLabojums/Views/AssignmentsPage.xaml -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MansLabojums.Views.AssignmentsPage"
             Title="Uzdevumi">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <Label Text="Uzdevumu saraksts"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <ListView x:Name="AssignmentsListView"
                      SelectionMode="Single">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <!-- Rādām: Uzdevuma ID, Apraksts, Deadline (YYYY-MM-DD) -->
                        <TextCell Text="{Binding DisplayTitle}"
                                  Detail="{Binding DisplayDetail}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <HorizontalStackLayout Spacing="10">
                <Button Text="Pievienot"
                        Clicked="OnAddAssignmentClicked"/>
                <Button Text="Labot"
                        Clicked="OnEditAssignmentClicked"/>
                <Button Text="Dzēst"
                        Clicked="OnDeleteAssignmentClicked"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
