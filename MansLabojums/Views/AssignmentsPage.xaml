<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MansLabojums.Views.AssignmentsPage"
             Title="Uzdevumi">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <Label Text="Uzdevumu saraksts"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <ListView x:Name="AssignmentsListView"
                      SelectedItem="None"
                      ItemSelected="OnAssignmentSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Description}"
                                  Detail="{Binding CourseName}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <HorizontalStackLayout Spacing="10">
                <Button Text="Pievienot" Clicked="OnAddAssignmentClicked" />
                <Button Text="Rediģēt" Clicked="OnEditAssignmentClicked" />
                <Button Text="Dzēst" Clicked="OnDeleteAssignmentClicked" />
            </HorizontalStackLayout>

            <Button Text="Filtrēt pēc kursa" Clicked="OnFilterByCourseClicked" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
