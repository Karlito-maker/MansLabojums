<!-- MansLabojums/Views/CoursesPage.xaml -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MansLabojums.Views.CoursesPage"
             Title="Kursi">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <Label Text="Kursu saraksts"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- Esošo kursu saraksts -->
            <ListView x:Name="CoursesListView"
                      SelectionMode="Single"
                      HeightRequest="200">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="5">
                                <!-- Rādām 'CourseName' un 'TeacherName' -->
                                <Label Text="{Binding CourseName}"
                                       FontAttributes="Bold" />
                                <Label Text="{Binding TeacherName}"
                                       FontAttributes="Italic"
                                       FontSize="12" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Pievienot jaunu kursu -->
            <Frame BackgroundColor="#eeeeee" Padding="10">
                <VerticalStackLayout Spacing="6">
                    <Label Text="Pievienot jaunu kursu" 
                           FontAttributes="Bold"
                           HorizontalOptions="Center" />

                    <!-- Ievadlauciņš kursa nosaukumam -->
                    <HorizontalStackLayout>
                        <Label Text="Kursa nosaukums:" 
                               VerticalTextAlignment="Center"
                               WidthRequest="120"/>
                        <Entry x:Name="CourseNameEntry"
                               Placeholder="Piemēram: Ķīmija"
                               HorizontalOptions="FillAndExpand" />
                    </HorizontalStackLayout>

                    <!-- Picker skolotāja izvēlei -->
                    <HorizontalStackLayout>
                        <Label Text="Skolotājs:" 
                               VerticalTextAlignment="Center"
                               WidthRequest="120"/>
                        <Picker x:Name="TeacherPicker"
                                Title="Izvēlieties skolotāju"
                                HorizontalOptions="FillAndExpand"
                                ItemsSource="{Binding TeacherList}"
                                ItemDisplayBinding="{Binding FullName}"
                                SelectedItem="{Binding SelectedTeacher}" />
                    </HorizontalStackLayout>

                    <!-- Pievienot poga -->
                    <Button Text="Pievienot kursu"
                            Clicked="OnAddCourseClicked"
                            BackgroundColor="#cccccc" 
                            CornerRadius="6"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Pogas Labot/Dzēst -->
            <HorizontalStackLayout Spacing="10">
                <Button Text="Labot"
                        Clicked="OnEditCourseClicked"/>
                <Button Text="Dzēst"
                        Clicked="OnDeleteCourseClicked"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
