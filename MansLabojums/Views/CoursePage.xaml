<!-- MansLabojums/Views/CoursesPage.xaml -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MansLabojums.Views.CoursesPage"
             Title="Kursi">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">

            <Label Text="Kursu saraksts"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <ListView x:Name="CoursesListView"
                      SelectionMode="Single"
                      ItemSelected="OnCourseSelected"
                      HeightRequest="200">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding CourseLabel}"
                                  Detail="{Binding TeacherLabel}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <HorizontalStackLayout Spacing="10">
                <Button Text="Labot"
                        Clicked="OnEditCourseClicked"
                        x:Name="EditButton"
                        IsEnabled="False"/>
                <Button Text="Dzēst"
                        Clicked="OnDeleteCourseClicked"
                        x:Name="DeleteButton"
                        IsEnabled="False"/>
            </HorizontalStackLayout>

            <!-- Pievienot kursu -->
            <Frame BackgroundColor="#eeeeee" Padding="10">
                <VerticalStackLayout Spacing="6">
                    <Label Text="Pievienot kursu"
                           FontAttributes="Bold"
                           HorizontalOptions="Center" />

                    <Entry x:Name="CourseNameEntry"
                           Placeholder="Kursa nosaukums" />

                    <!-- Skolotāja dropdown -->
                    <Picker x:Name="TeacherPicker"
                            Title="Izvēlieties skolotāju"
                            ItemsSource="{Binding TeacherList}"
                            ItemDisplayBinding="{Binding TeacherFullName}"
                            SelectedItem="{Binding SelectedTeacher}" />

                    <HorizontalStackLayout Spacing="10">
                        <Button Text="Pievienot"
                                Clicked="OnAddCourseClicked" />
                        <Button Text="Cancel"
                                Clicked="OnCancelAddClicked" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
