<!-- MansLabojums/Views/CoursesPage.xaml -->
<!-- Kursu (Course) CRUD lapa -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MansLabojums.Views.CoursesPage"
             Title="Kursi">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">

            <Label Text="Kursu saraksts"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <ListView x:Name="CoursesListView"
                      SelectionMode="Single"
                      HeightRequest="200"
                      ItemSelected="OnCourseSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding DisplayText}"
                                  Detail="{Binding TeacherText}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Pogas labot/dzēst -->
            <HorizontalStackLayout Spacing="10">
                <Button x:Name="EditButton"
                        Text="Labot"
                        Clicked="OnEditCourseClicked"
                        IsEnabled="False"/>
                <Button x:Name="DeleteButton"
                        Text="Dzēst"
                        Clicked="OnDeleteCourseClicked"
                        IsEnabled="False"/>
            </HorizontalStackLayout>

            <!-- Forma jaunu kursu pievienošanai -->
            <Frame BackgroundColor="#eeeeee" Padding="10">
                <VerticalStackLayout Spacing="6">
                    <Label Text="Pievienot kursu"
                           FontAttributes="Bold"
                           HorizontalOptions="Center" />

                    <Entry x:Name="CourseNameEntry"
                           Placeholder="Kursa nosaukums (piem. Bioloģija)" />
                    <Entry x:Name="TeacherIdEntry"
                           Placeholder="Skolotāja ID (skaitlis)"
                           Keyboard="Numeric" />

                    <HorizontalStackLayout Spacing="10">
                        <Button Text="Pievienot"
                                Clicked="OnAddCourseClicked"/>
                        <Button Text="Cancel"
                                Clicked="OnCancelAddClicked"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
