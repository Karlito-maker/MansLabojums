<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MansLabojums.Views.StudentsPage"
             Title="Studenti">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <Label Text="Studentu saraksts"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <ListView x:Name="StudentsListView"
                      SelectedItem="None"
                      ItemSelected="OnStudentSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell 
                            Text="{Binding Name}"
                            Detail="{Binding Surname}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <HorizontalStackLayout Spacing="10">
                <Button Text="Pievienot" Clicked="OnAddStudentClicked" />
                <Button Text="Rediģēt" Clicked="OnEditStudentClicked" />
                <Button Text="Dzēst" Clicked="OnDeleteStudentClicked" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
