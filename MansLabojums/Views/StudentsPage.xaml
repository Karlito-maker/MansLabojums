<!-- MansLabojums/Views/StudentsPage.xaml -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MansLabojums.Views.StudentsPage"
             Title="Studenti">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <Label Text="Studentu saraksts"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- Saraksts -->
            <ListView x:Name="StudentsListView"
                      SelectionMode="Single">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <!-- Rādām studenta vārdu + uzvārdu, un StudentIdNumber -->
                        <TextCell Text="{Binding FullName}"
                                  Detail="{Binding StudentIdNumberStr}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- CRUD pogas -->
            <HorizontalStackLayout Spacing="10">
                <Button Text="Pievienot"
                        Clicked="OnAddStudentClicked"/>
                <Button Text="Labot"
                        Clicked="OnEditStudentClicked"/>
                <Button Text="Dzēst"
                        Clicked="OnDeleteStudentClicked"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>


