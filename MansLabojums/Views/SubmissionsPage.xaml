<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MansLabojums.Views.SubmissionsPage"
             Title="Iesniegumi">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <Label Text="Iesniegumu saraksts"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <ListView x:Name="SubmissionsListView"
                      SelectedItem="None"
                      ItemSelected="OnSubmissionSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell 
                            Text="{Binding AssignmentDescription}"
                            Detail="{Binding StudentName}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <HorizontalStackLayout Spacing="10">
                <Button Text="Pievienot" Clicked="OnAddSubmissionClicked" />
                <Button Text="Rediģēt" Clicked="OnEditSubmissionClicked" />
                <Button Text="Dzēst" Clicked="OnDeleteSubmissionClicked" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
