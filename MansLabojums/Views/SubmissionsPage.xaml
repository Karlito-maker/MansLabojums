<!-- MansLabojums/Views/SubmissionsPage.xaml -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MansLabojums.Views.SubmissionsPage"
             Title="Iesniegumi">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">

            <Label Text="Iesniegumu saraksts"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- Esošo iesniegumu saraksts -->
            <ListView x:Name="SubmissionsListView"
                      SelectionMode="Single"
                      ItemSelected="OnSubmissionSelected"
                      HeightRequest="220">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding DisplayTitle}"
                                  Detail="{Binding DisplayDetail}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Labot / Dzēst pogas -->
            <HorizontalStackLayout Spacing="10">
                <Button Text="Labot"
                        x:Name="EditButton"
                        Clicked="OnEditSubmissionClicked"
                        IsEnabled="False" />
                <Button Text="Dzēst"
                        x:Name="DeleteButton"
                        Clicked="OnDeleteSubmissionClicked"
                        IsEnabled="False" />
            </HorizontalStackLayout>

            <!-- Forma jaunu iesniegumu ievadei -->
            <Frame BackgroundColor="#eeeeee" Padding="10">
                <VerticalStackLayout Spacing="6">
                    <Label Text="Pievienot jaunu iesniegumu"
                           FontAttributes="Bold"
                           HorizontalOptions="Center" />

                    <!-- Assignment Picker -->
                    <HorizontalStackLayout>
                        <Label Text="Uzdevums:"
                               VerticalTextAlignment="Center"
                               WidthRequest="90"/>
                        <Picker x:Name="AssignmentPicker"
                                Title="Izvēlieties uzdevumu"
                                ItemsSource="{Binding AssignmentList}"
                                ItemDisplayBinding="{Binding DisplayText}"
                                SelectedItem="{Binding SelectedAssignment}"
                                HorizontalOptions="FillAndExpand"/>
                    </HorizontalStackLayout>

                    <!-- Student Picker -->
                    <HorizontalStackLayout>
                        <Label Text="Students:"
                               VerticalTextAlignment="Center"
                               WidthRequest="90"/>
                        <Picker x:Name="StudentPicker"
                                Title="Izvēlieties studentu"
                                ItemsSource="{Binding StudentList}"
                                ItemDisplayBinding="{Binding DisplayText}"
                                SelectedItem="{Binding SelectedStudent}"
                                HorizontalOptions="FillAndExpand"/>
                    </HorizontalStackLayout>

                    <!-- Score ievade -->
                    <HorizontalStackLayout>
                        <Label Text="Rezultāts:"
                               VerticalTextAlignment="Center"
                               WidthRequest="90"/>
                        <Entry x:Name="ScoreEntry"
                               Keyboard="Numeric"
                               HorizontalOptions="FillAndExpand"/>
                    </HorizontalStackLayout>

                    <!-- Pievienot + Cancel -->
                    <HorizontalStackLayout Spacing="10">
                        <Button Text="Pievienot iesniegumu"
                                Clicked="OnAddSubmissionClicked"/>
                        <Button Text="Cancel"
                                Clicked="OnCancelAddClicked"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
