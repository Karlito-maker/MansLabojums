<!-- MansLabojums/Views/SubmissionsPage.xaml -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MansLabojums.Views.SubmissionsPage"
             Title="Iesniegumi">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <Label Text="Iesniegumu saraksts"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- Esošo iesniegumu saraksts -->
            <ListView x:Name="SubmissionsListView"
                      SelectionMode="Single"
                      HeightRequest="200">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding DisplayTitle}"
                                  Detail="{Binding DisplayDetail}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Form ielikt Submission pievienošanai -->
            <Frame BackgroundColor="#eeeeee" Padding="10">
                <VerticalStackLayout Spacing="6">
                    <Label Text="Pievienot jaunu iesniegumu"
                           FontAttributes="Bold"
                           HorizontalOptions="Center" />

                    <!-- Uzdevuma (Assignment) Picker -->
                    <HorizontalStackLayout>
                        <Label Text="Uzdevums:" 
                               VerticalTextAlignment="Center"
                               WidthRequest="90"/>
                        <Picker x:Name="AssignmentPicker"
                                Title="Izvēlieties uzdevumu"
                                ItemsSource="{Binding AssignmentList}"
                                ItemDisplayBinding="{Binding AssignmentDesc}"
                                SelectedItem="{Binding SelectedAssignment}"
                                HorizontalOptions="FillAndExpand"/>
                    </HorizontalStackLayout>

                    <!-- Studenta (Student) Picker -->
                    <HorizontalStackLayout>
                        <Label Text="Students:"
                               VerticalTextAlignment="Center"
                               WidthRequest="90"/>
                        <Picker x:Name="StudentPicker"
                                Title="Izvēlieties studentu"
                                ItemsSource="{Binding StudentList}"
                                ItemDisplayBinding="{Binding StudentName}"
                                SelectedItem="{Binding SelectedStudent}"
                                HorizontalOptions="FillAndExpand"/>
                    </HorizontalStackLayout>

                    <!-- Score ievade -->
                    <HorizontalStackLayout>
                        <Label Text="Rezultāts:" 
                               VerticalTextAlignment="Center"
                               WidthRequest="90"/>
                        <Entry x:Name="ScoreEntry"
                               Keyboard="Numeric"
                               HorizontalOptions="FillAndExpand"/>
                    </HorizontalStackLayout>

                    <Button Text="Pievienot iesniegumu"
                            Clicked="OnAddSubmissionClicked"
                            BackgroundColor="#cccccc" 
                            CornerRadius="6"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Pogas Labot/Dzēst iesniegumu -->
            <HorizontalStackLayout Spacing="10">
                <Button Text="Labot"
                        Clicked="OnEditSubmissionClicked"/>
                <Button Text="Dzēst"
                        Clicked="OnDeleteSubmissionClicked"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
